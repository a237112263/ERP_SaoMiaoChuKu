<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="10dp"
        android:text="商品"
        android:textSize="16dp"
        android:id="@+id/tv_shopshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_below="@+id/tv_shopshow"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="系统单号"
        android:id="@+id/tv_shopshow_xitongdanhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_shopshow_xitongdanhao"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="规格编码"
        android:id="@+id/tv_shopshow_guigebianm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_shopshow_guigebianm"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="商品编码"
        android:id="@+id/tv_shopshow_shangpingbianma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="状态：未扫描"
        android:textSize="13dp"
        android:id="@+id/tv_shopshow_zhuangtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#e8e8e8"
        android:layout_alignTop="@+id/tv_shopshow_cangku"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <TextView
        android:layout_below="@+id/tv_shopshow_shangpingbianma"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="数量"
        android:id="@+id/tv_shopshow_shuliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_shopshow_shuliang"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:text="仓库"
        android:id="@+id/tv_shopshow_cangku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/tv_shopshow_cangku"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:text="供应商"
        android:id="@+id/tv_shopshow_gongyingshang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>