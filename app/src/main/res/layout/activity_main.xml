<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
        <FrameLayout
            android:id="@+id/tab_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#519ee2"
                android:gravity="center"
                android:text="二维码扫描"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/iv_main1"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@drawable/ic_keyboard_arrow_left_24dp"/>


        </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_main1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/erweima" />
        <Button
            android:id="@+id/bt_sms1"
            style="@style/text_flag_02"
            android:layout_width="170dp"
            android:layout_height="40.0dip"
            android:layout_marginTop="20dp"
            android:text="扫一扫"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
